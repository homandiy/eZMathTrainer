<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/green_dark"
    tools:context="com.example.homan.ezmathtrainer.MainActivity">


    <ImageView
        android:id="@+id/titleView"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/title_math_trainer"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="0.3" />

    <GridLayout
        android:id="@+id/gridLayout"
        android:layout_width="350dp"
        android:layout_height="400dp"
        android:layout_marginLeft="24dp"
        android:layout_marginRight="8dp"
        android:background="@android:color/background_light"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="100dp">

        <ImageButton
            android:id="@+id/plusButton"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_column="0"
            android:layout_columnWeight="0"
            android:layout_row="0"
            android:onClick="additionTrainerOption"
            android:scaleType="fitXY"
            android:soundEffectsEnabled="true"
            app:srcCompat="@drawable/plus" />

        <ImageView
            android:id="@+id/plusView"
            android:layout_width="250dp"
            android:layout_height="100dp"
            android:layout_column="1"
            android:layout_columnWeight="2"
            android:layout_row="0"
            android:scaleType="fitCenter"
            app:srcCompat="@drawable/sum" />

        <ImageButton
            android:id="@+id/minusButton"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_column="0"
            android:layout_row="1"
            android:onClick="incomingPage"
            android:scaleType="fitXY"
            android:soundEffectsEnabled="true"
            app:srcCompat="@drawable/minus" />

        <ImageView
            android:id="@+id/minusView"
            android:layout_width="250dp"
            android:layout_height="100dp"
            android:layout_column="1"
            android:layout_columnWeight="2"
            android:layout_row="1"
            app:srcCompat="@drawable/remain" />

        <ImageButton
            android:id="@+id/multiplyButton"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_column="0"
            android:layout_row="2"
            android:onClick="incomingPage"
            android:scaleType="fitXY"
            android:soundEffectsEnabled="true"
            app:srcCompat="@drawable/multiply" />

        <ImageView
            android:id="@+id/multiplyView"
            android:layout_width="250dp"
            android:layout_height="100dp"
            android:layout_column="1"
            android:layout_columnWeight="2"
            android:layout_row="2"
            app:srcCompat="@drawable/multiplication" />

        <ImageButton
            android:id="@+id/divideButton"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_column="0"
            android:layout_row="3"
            android:onClick="incomingPage"
            android:scaleType="fitXY"
            android:soundEffectsEnabled="true"
            app:srcCompat="@drawable/divide" />

        <ImageView
            android:id="@+id/divideView"
            android:layout_width="250dp"
            android:layout_height="100dp"
            android:layout_column="1"
            android:layout_columnWeight="2"
            android:layout_row="3"
            app:srcCompat="@drawable/division" />

    </GridLayout>

</android.support.constraint.ConstraintLayout>

